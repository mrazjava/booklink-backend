{
  "openapi":"3.0.3",
  "info":{
    "title":"Booklink Openlibrary Depot",
    "description":"REST API for author/book integration with openlibrary.org",
    "termsOfService":"https://pre.booklinktrove.com/about/privacy-policy",
    "contact":{
      "name":"mrazjava",
      "url":"https://github.com/mrazjava"
    },
    "license":{
      "name":"Apache 2.0",
      "url":"https://www.apache.org/licenses/LICENSE-2.0"
    },
    "version":"202009-SNAPSHOT"
  },
  "tags":[
    {
      "name":"Author",
      "description":"Author Rest Controller"
    }
  ],
  "paths":{
    "/rest/v1/depot/author/{id}":{
      "get":{
        "tags":[
          "DepotAuthor"
        ],
        "summary":"Find author matching a specific ID",
        "operationId":"findByIdUsingGET",
        "parameters":[
          {
            "name":"id",
            "in":"path",
            "description":"unique author ID",
            "required":true,
            "style":"simple",
            "schema":{
              "type":"string"
            }
          }
        ],
        "responses":{
          "200":{
            "description":"ok",
            "content":{
              "*/*":{
                "schema":{
                  "$ref":"#/components/schemas/DepotAuthor"
                }
              }
            }
          },
          "401":{
            "description":"Unauthorized"
          },
          "403":{
            "description":"Forbidden"
          },
          "404":{
            "description":"Not Found"
          }
        }
      }
    }
  },
  "components":{
    "schemas":{
      "DepotAuthor":{
        "title":"DepotAuthor",
        "type":"object",
        "properties":{
          "bio":{
            "type":"string"
          },
          "birthDate":{
            "type":"string"
          },
          "comment":{
            "type":"string"
          },
          "created":{
            "type":"string",
            "format":"date-time"
          },
          "deathDate":{
            "type":"string"
          },
          "id":{
            "type":"string"
          },
          "imageLarge":{
            "$ref":"#/components/schemas/DepotPicture"
          },
          "imageMedium":{
            "$ref":"#/components/schemas/DepotPicture"
          },
          "imageSmall":{
            "$ref":"#/components/schemas/DepotPicture"
          },
          "modified":{
            "type":"string",
            "format":"date-time"
          },
          "name":{
            "type":"string"
          },
          "nameFull":{
            "type":"string"
          },
          "namePersonal":{
            "type":"string"
          },
          "notes":{
            "type":"string"
          },
          "publishers":{
            "type":"array",
            "items":{
              "type":"string"
            }
          },
          "works":{
            "type":"array",
            "items":{
              "type":"string"
            }
          }
        }
      },
      "DepotPicture":{
        "title":"DepotPicture",
        "type":"object",
        "properties":{
          "graphics":{
            "type":"string",
            "format":"byte"
          },
          "id":{
            "type":"string"
          },
          "info":{
            "type":"string"
          },
          "sizeBytes":{
            "type":"integer",
            "format":"int64"
          },
          "sizeText":{
            "type":"string"
          }
        }
      }
    }
  }
}